<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.ticketsystem</groupId>
    <artifactId>backend</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <artifactId>ticketsystem-avro</artifactId>
  <packaging>jar</packaging>
  <name>ticketsystem-avro</name>
  <url>https://github.com/YOUR_GH_OWNER/YOUR_REPO</url>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>
  <scm>
    <url>https://github.com/YOUR_GH_OWNER/YOUR_REPO</url>
    <connection>scm:git:git://github.com/YOUR_GH_OWNER/YOUR_REPO.git</connection>
    <developerConnection>scm:git:ssh://github.com:YOUR_GH_OWNER/YOUR_REPO.git</developerConnection>
  </scm>
  <properties>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <avro.version>1.12.0</avro.version>
  </properties>
  <dependencies>
    <!-- Avro runtime để import org.apache.avro.* -->
    <dependency>
      <groupId>org.apache.avro</groupId>
      <artifactId>avro</artifactId>
      <version>${avro.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.avro</groupId>
        <artifactId>avro-maven-plugin</artifactId>
        <version>${avro.version}</version>
        <executions>
          <execution>
            <id>schemas</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>schema</goal>
            </goals>
            <configuration>
              <sourceDirectory>${project.basedir}/src/main/resources/avro</sourceDirectory>
              <outputDirectory>${project.build.directory}/generated-sources/avro</outputDirectory>
              <stringType>String</stringType>
              <createSetters>false</createSetters>
              <enableDecimalLogicalType>true</enableDecimalLogicalType>
              <includes>
                <include>**/*.avsc</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- (tùy chọn) Đảm bảo generated sources vào classpath compile -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <generatedSourcesDirectory>${project.build.directory}/generated-sources/avro</generatedSourcesDirectory>
        </configuration>
      </plugin>
    </plugins>
    <!-- Đóng gói .avsc vào JAR (nếu service cần đọc schema ở runtime) -->
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.avsc</include>
        </includes>
      </resource>
    </resources>
  </build>
  <!-- nơi publish -->
  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub Packages</name>
      <url>https://maven.pkg.github.com/YOUR_GH_OWNER/YOUR_REPO</url>
    </repository>
    <!-- (tùy chọn) snapshots; nếu muốn tách -->
    <snapshotRepository>
      <id>github</id>
      <name>GitHub Packages - Snapshots</name>
      <url>https://maven.pkg.github.com/YOUR_GH_OWNER/YOUR_REPO</url>
    </snapshotRepository>
  </distributionManagement>
  <!-- (khuyến nghị) metadata tối thiểu -->
</project>