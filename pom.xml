<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Standalone coordinates -->
  <groupId>com.ticketsystem</groupId>
  <artifactId>ticket-store-avro</artifactId>
  <version>0.1.0</version>
  <packaging>jar</packaging>
  <name>ticket-store-avro</name>

  <url>https://github.com/phungle2508/ticket-store-avro</url>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>
  <scm>
    <url>https://github.com/phungle2508/ticket-store-avro</url>
    <connection>scm:git:https://github.com/phungle2508/ticket-store-avro.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/phungle2508/ticket-store-avro.git</developerConnection>
  </scm>

  <properties>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <avro.version>1.12.0</avro.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.avro</groupId>
      <artifactId>avro</artifactId>
      <version>${avro.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Use stable plugin 1.11.3 even if runtime is 1.12.0 -->
      <plugin>
        <groupId>org.apache.avro</groupId>
        <artifactId>avro-maven-plugin</artifactId>
        <version>1.11.3</version>
        <executions>
          <execution>
            <id>schemas</id>
            <phase>generate-sources</phase>
            <goals><goal>schema</goal></goals>
            <configuration>
              <sourceDirectory>${project.basedir}/src/main/resources/avro</sourceDirectory>
              <outputDirectory>${project.build.directory}/generated-sources/avro</outputDirectory>
              <stringType>String</stringType>
              <createSetters>false</createSetters>
              <enableDecimalLogicalType>true</enableDecimalLogicalType>
              <includes><include>**/*.avsc</include></includes>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <generatedSourcesDirectory>${project.build.directory}/generated-sources/avro</generatedSourcesDirectory>
        </configuration>
      </plugin>
    </plugins>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes><include>**/*.avsc</include></includes>
      </resource>
    </resources>
  </build>

  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub Packages</name>
      <url>https://maven.pkg.github.com/phungle2508/ticket-store-avro</url>
    </repository>
    <snapshotRepository>
      <id>github</id>
      <name>GitHub Packages - Snapshots</name>
      <url>https://maven.pkg.github.com/phungle2508/ticket-store-avro</url>
    </snapshotRepository>
  </distributionManagement>
</project>
